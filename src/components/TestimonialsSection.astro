<section class="bg-sp-dark-gray text-white py-16">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-12">What Twin Cities Homeowners Say</h2>
    
    <div class="max-w-6xl mx-auto">
      <!-- Image Carousel -->
      <div class="relative">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
          <!-- House 1: Dark blue siding -->
          <div class="bg-gray-300 rounded-lg overflow-hidden aspect-video">
            <div class="w-full h-full bg-gradient-to-br from-blue-800 via-blue-700 to-blue-600 flex items-center justify-center">
              <div class="text-white text-sm">Dark Blue Siding</div>
            </div>
          </div>
          
          <!-- House 2: Light brown/tan siding -->
          <div class="bg-gray-300 rounded-lg overflow-hidden aspect-video">
            <div class="w-full h-full bg-gradient-to-br from-amber-200 via-amber-300 to-amber-400 flex items-center justify-center">
              <div class="text-gray-800 text-sm">Tan Siding</div>
            </div>
          </div>
          
          <!-- House 3: White siding -->
          <div class="bg-gray-300 rounded-lg overflow-hidden aspect-video">
            <div class="w-full h-full bg-gradient-to-br from-gray-100 via-gray-200 to-gray-300 flex items-center justify-center">
              <div class="text-gray-800 text-sm">White Siding</div>
            </div>
          </div>
        </div>
        
        <!-- Carousel Dots -->
        <div class="flex justify-center gap-2">
          <div class="w-2 h-2 rounded-full bg-white"></div>
          <div class="w-2 h-2 rounded-full bg-gray-500"></div>
          <div class="w-2 h-2 rounded-full bg-gray-500"></div>
        </div>
      </div>
    </div>
  </div>
</section>

