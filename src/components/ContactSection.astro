<section class="bg-white contact-section">
  <div class="container mx-auto px-4 text-center contact-container">
    <h2 class="contact-heading">Leave Your Home in the Best Hands</h2>
    <p class="contact-subheading">Get in touch to see if Superior Point Exteriors is the right choice!</p>
    <button class="contact-button">
      GET FREE HEALTH CHECK
    </button>
  </div>
</section>

<style>
  .contact-section {
    padding: 20px 0;
    margin: 0;
    background-color: transparent;
  }

  @media screen and (max-width: 480px) {
    .contact-section {
      padding-top: 40px;
      padding-bottom: 40px;
    }
  }

  .contact-container {
    margin: 0 auto;
    padding: 10px 5px;
    width: 100%;
  }

  .contact-heading {
    font-family: 'Montserrat', sans-serif;
    font-weight: 700;
    margin: 0;
    padding: 0;
    text-align: center;
    color: #000000;
  }

  @media screen and (max-width: 480px) {
    .contact-heading {
      font-size: 28px !important;
    }
  }

  @media screen and (min-width: 481px) {
    .contact-heading {
      font-size: 32px !important;
    }
  }

  .contact-subheading {
    font-family: 'Montserrat', sans-serif;
    font-weight: 400;
    margin: 0 0 10px;
    padding: 10px 0;
    text-align: center;
    color: #000000;
  }

  @media screen and (max-width: 480px) {
    .contact-subheading {
      font-size: 24px !important;
      margin-bottom: 20px;
    }
  }

  @media screen and (min-width: 481px) {
    .contact-subheading {
      font-size: 24px !important;
    }
  }

  .contact-button {
    font-family: 'Montserrat', sans-serif;
    background-color: #65b357;
    color: #ffffff;
    padding: 16px 32px;
    border: 1px solid #ffffff;
    letter-spacing: 0;
    text-transform: uppercase;
    font-size: 18px;
    font-weight: 700;
    margin: 0;
    text-align: center;
    width: auto;
    height: auto;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .contact-button:hover {
    background-color: #5aa04a;
  }

  @media screen and (max-width: 480px) {
    .contact-button {
      font-size: 18px;
    }
  }
</style>

