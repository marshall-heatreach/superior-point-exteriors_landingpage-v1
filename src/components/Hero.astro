<!-- Header Section -->
<header class="bg-sp-green text-white">
  <div class="container mx-auto px-4 py-4 md:py-6">
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-2">
        <svg class="w-6 h-6 md:w-8 md:h-8" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z"/>
        </svg>
        <div>
          <h1 class="text-xl md:text-2xl font-bold leading-tight">SUPERIOR POINT</h1>
          <p class="text-xs md:text-sm leading-tight">EXTERIORS</p>
        </div>
      </div>
      <div class="hidden md:block">
        <p class="text-sm md:text-base font-semibold">Rated 5 Stars by the Twin Cities</p>
      </div>
    </div>
  </div>
</header>

<!-- Hero Section with Background Image -->
<section class="hero relative min-h-[600px] md:min-h-[900px] text-white bg-cover bg-center bg-no-repeat hero-bg">
  <div class="hero-container">
    <!-- Text Content with Full-Width Banner Background -->
    <div class="text-center hero-text-banner" style="background-color: rgba(3, 2, 2, 0.6);">
      <div class="container mx-auto px-4">
        <h1 class="text-[25px] md:text-[48px] font-bold leading-tight hero-heading" style="font-family: 'Montserrat', sans-serif;">
          FREE Winter Siding 'Health Check'
        </h1>
        <h2 class="text-xl md:text-2xl font-normal hero-subheading-1" style="font-family: 'Montserrat', sans-serif;">
          Only <em class="font-semibold not-italic">12 Available</em> This Month!
        </h2>
        <h2 class="text-xl md:text-2xl font-normal hero-subheading-2" style="font-family: 'Montserrat', sans-serif;">
          Take the 30-second Quiz
        </h2>
      </div>
    </div>
    
    <!-- Growform Embedded Form -->
    <div class="container mx-auto px-4 hero-form-container">
      <div class="max-w-2xl mx-auto">
        <div class="bg-white rounded-lg p-6 md:p-8 shadow-lg">
          <!-- Growform Snippet - Deferred for better performance -->
          <script type="text/javascript" src="https://embed.growform.co/client/69457054e5f4f67ea247dd87" defer></script>
          <!-- End Growform Snippet -->
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-bg {
    background-image: url('https://images.leadconnectorhq.com/image/f_webp/q_80/r_768/u_https://assets.cdn.filesafe.space/gRcxdesqVI2uOCueKGNZ/media/693db9cb97c0232454e0748b.webp');
    opacity: 1;
  }

  @media (min-width: 481px) and (max-width: 1024px) {
    .hero-bg {
      background-image: url('https://images.leadconnectorhq.com/image/f_webp/q_80/r_900/u_https://assets.cdn.filesafe.space/gRcxdesqVI2uOCueKGNZ/media/693db9cb97c0232454e0748b.webp');
      opacity: 1;
    }
  }

  @media (min-width: 1025px) {
    .hero-bg {
      background-image: url('https://images.leadconnectorhq.com/image/f_webp/q_80/r_1200/u_https://assets.cdn.filesafe.space/gRcxdesqVI2uOCueKGNZ/media/693db9cb97c0232454e0748b.webp');
      opacity: 1;
    }
  }

  /* Hero section spacing to match reference */
  .hero-container {
    padding-top: 10px;
    padding-bottom: 20px;
  }

  @media (max-width: 480px) {
    .hero-container {
      padding-top: 10px;
    }
  }

  /* Hero text banner - full width background */
  .hero-text-banner {
    width: 100%;
    padding: 10px 5px;
    margin-bottom: 0;
  }

  @media (max-width: 480px) {
    .hero-text-banner {
      padding-top: 10px;
      padding-bottom: 0;
      padding-left: 0;
      padding-right: 0;
    }
  }

  /* Form container spacing */
  .hero-form-container {
    padding: 10px 5px;
    margin-top: 0;
  }

  @media (max-width: 480px) {
    .hero-form-container {
      padding-top: 10px;
    }
  }

  .hero-heading {
    padding: 0;
    margin: 0;
  }

  .hero-subheading-1 {
    margin: 0;
  }

  .hero-subheading-2 {
    margin: 0;
  }

  /* Desktop spacing */
  @media (min-width: 481px) {
    .hero-subheading-1 {
      padding: 10px 0 6px;
    }

    .hero-subheading-2 {
      padding: 0 0 10px;
    }
  }

  /* Mobile spacing */
  @media (max-width: 480px) {
    .hero-subheading-1 {
      padding: 0;
    }

    .hero-subheading-2 {
      padding: 5px 0 0;
    }
  }
</style>


