---
import { Image } from 'astro:assets';
import trustImage from '../assets/images/trust.webp';
import trust1Image from '../assets/images/trust1.webp';
import trust2Image from '../assets/images/trust2.webp';
import trust3Image from '../assets/images/trust3.webp';
---

<!-- Trust Section - Responsive Images -->
<section class="bg-sp-dark-gray trust-section">
  <div class="container mx-auto trust-container">
    <!-- Mobile: Single image -->
    <div class="trust-image-wrapper trust-mobile">
      <Image src={trustImage} alt="Trust badge" class="trust-image" width={600} height={120} loading="lazy" />
    </div>
    
    <!-- Desktop: Three images in a row -->
    <div class="trust-images-row trust-desktop">
      <div class="trust-image-col">
        <Image src={trust1Image} alt="Trust badge 1" class="trust-image" width={200} height={120} loading="lazy" />
      </div>
      <div class="trust-image-col">
        <Image src={trust2Image} alt="Trust badge 2" class="trust-image" width={200} height={120} loading="lazy" />
      </div>
      <div class="trust-image-col">
        <Image src={trust3Image} alt="Trust badge 3" class="trust-image" width={200} height={120} loading="lazy" />
      </div>
    </div>
  </div>
</section>

<style>
  .trust-section {
    padding: 0;
    margin: 0;
  }

  .trust-container {
    padding: 0;
  }

  .trust-image-wrapper {
    margin: 0 auto;
    padding: 20px;
    display: flex;
    justify-content: center;
    align-items: center;
    max-width: 100%;
  }

  .trust-image {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Desktop: Three images in a row */
  .trust-images-row {
    margin: 0 auto;
    padding: 0 5px;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    width: 55%;
  }

  .trust-image-col {
    padding: 0 5px;
    width: 33.333%;
    flex: 0 0 33.333%;
  }

  .trust-desktop .trust-image {
    max-height: 120px;
    min-height: 80px;
    object-fit: contain;
  }

  .trust-desktop {
    display: none;
  }

  .trust-mobile {
    display: flex;
  }

  /* Desktop styles */
  @media (min-width: 481px) {
    .trust-mobile {
      display: none;
    }

    .trust-desktop {
      display: flex;
    }

    .trust-image-wrapper {
      max-width: 55%;
    }
  }

  /* Mobile styles */
  @media (max-width: 480px) {
    .trust-image-wrapper {
      max-width: 100%;
      padding: 20px;
    }
  }
</style>
