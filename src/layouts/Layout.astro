---
interface Props {
  title?: string;
}

const { title = "Superior Point Exteriors - Free Winter Siding Health Check" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="description" content="Free Winter Siding Health Check - Only 12 Available This Month! Superior Point Exteriors offers professional exterior services in the Twin Cities." />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Preconnect to external domains for faster resource loading -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://embed.growform.co" />
    <link rel="dns-prefetch" href="https://embed.growform.co" />
    <link rel="preconnect" href="https://images.leadconnectorhq.com" />
    
    <!-- Preload LCP hero image for faster Largest Contentful Paint -->
    <!-- Browser will only preload the image matching the viewport via media queries -->
    <link rel="preload" href="https://images.leadconnectorhq.com/image/f_webp/q_80/r_768/u_https://assets.cdn.filesafe.space/gRcxdesqVI2uOCueKGNZ/media/693db9cb97c0232454e0748b.webp" as="image" fetchpriority="high" media="(max-width: 480px)" />
    <link rel="preload" href="https://images.leadconnectorhq.com/image/f_webp/q_80/r_900/u_https://assets.cdn.filesafe.space/gRcxdesqVI2uOCueKGNZ/media/693db9cb97c0232454e0748b.webp" as="image" fetchpriority="high" media="(min-width: 481px) and (max-width: 1024px)" />
    <link rel="preload" href="https://images.leadconnectorhq.com/image/f_webp/q_80/r_1200/u_https://assets.cdn.filesafe.space/gRcxdesqVI2uOCueKGNZ/media/693db9cb97c0232454e0748b.webp" as="image" fetchpriority="high" media="(min-width: 1025px)" />
    
    <!-- Preload Growform script for fastest form loading (highest priority) -->
    <link rel="preload" href="https://embed.growform.co/client/69457054e5f4f67ea247dd87" as="script" fetchpriority="high" />
    
    <!-- Optimized font loading with font-display: swap -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet" />
    
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  html {
    font-family: 'Montserrat', system-ui, sans-serif;
  }
</style>

